{
  "name": "roll-anything",
  "sideEffects": false,
  "version": "2.0.0",
  "description": "A very tiny dice util. You can roll a dice with any amount of sides.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "types/index.d.ts",
  "scripts": {
    "test": "ava",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "rollup": "rollup -c build/rollup.js",
    "build": "npm run lint && npm run test && npm run rollup"
  },
  "keywords": [
    "roll",
    "dice",
    "roll-a-dice",
    "chance",
    "fifty-fitfy",
    "flip-a-coin"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "ava": "^3.12.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-tree-shaking": "^1.8.0",
    "rollup": "^2.26.11",
    "rollup-plugin-typescript2": "^0.27.2",
    "tsconfig-paths": "^3.9.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "author": "Luca Ban - Mesqueeb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mesqueeb/roll-anything/issues"
  },
  "homepage": "https://github.com/mesqueeb/roll-anything#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mesqueeb/roll-anything.git"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "tsconfig-paths/register",
      "ts-node/register"
    ]
  }
}
