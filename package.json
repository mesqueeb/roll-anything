{
  "name": "roll-anything",
  "sideEffects": false,
  "type": "module",
  "version": "3.0.2",
  "description": "A very tiny dice util. You can roll a dice with any amount of sides.",
  "module": "./dist/index.es.js",
  "main": "./dist/index.cjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12.13"
  },
  "scripts": {
    "test": "vitest run",
    "lint": "tsc --noEmit && eslint ./src --ext .ts",
    "build": "rollup --bundleConfigAsCjs -c ./scripts/build.js",
    "release": "npm run lint && del dist && npm run build && np"
  },
  "keywords": [
    "roll",
    "dice",
    "roll-a-dice",
    "chance",
    "fifty-fitfy",
    "flip-a-coin"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "del-cli": "^4.0.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-tree-shaking": "^1.10.0",
    "np": "^7.6.0",
    "prettier": "^2.5.1",
    "rollup": "^3.21.5",
    "rollup-plugin-typescript2": "^0.34.1",
    "typescript": "^4.5.5",
    "vitest": "^0.2.3"
  },
  "author": "Luca Ban - Mesqueeb",
  "funding": "https://github.com/sponsors/mesqueeb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mesqueeb/roll-anything/issues"
  },
  "homepage": "https://github.com/mesqueeb/roll-anything#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mesqueeb/roll-anything.git"
  },
  "np": {
    "yarn": false,
    "branch": "production"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules",
      "dist",
      "scripts",
      "test"
    ],
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "tree-shaking"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-ignore": "off",
      "tree-shaking/no-side-effects-in-initialization": "error",
      "@typescript-eslint/ban-ts-comment": "off"
    }
  }
}
